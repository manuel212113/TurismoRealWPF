<Window x:Class="TurismoReal_Escritorio.Paginas.ActualizarServicioExtra"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurismoReal_Escritorio.Paginas"
      mc:Ignorable="d" 
      Height="400" Width="400"
      Title="Actualizar_Servicios_Extra">

    <Grid Background="{DynamicResource SecundaryBackgroundColor}" Margin="0,0,0,60" Height="600" Width="400">

        <TextBlock Text="NOMBRESRV" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,112,0,0" RenderTransformOrigin="1.323,0.535"></TextBlock>
        <TextBlock Text="PRECIO" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,142,0,0" RenderTransformOrigin="1.323,0.535"></TextBlock>

        <TextBox x:Name="TxtNOMBRE_SRV" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200px" Margin="146,99,0,0"></TextBox>
        <TextBox x:Name="TxtPRECIO" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200px" Margin="146,128,0,0"></TextBox>

        <Button Margin="55,231,72,337" Background="CadetBlue" Content="Actualizar" x:Name="btnActualizar" Click="btnActualizar_Click" BorderBrush="Transparent" RenderTransformOrigin="0.386,0.416" Cursor="Hand"></Button>
    </Grid>
</Window>
